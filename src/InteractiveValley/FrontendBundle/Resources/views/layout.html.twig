{% extends '::baseFrontend.html.twig' %}

{% block title %}Pakmail | Virreyes{% endblock %}

{% set urlAbsolutaFoto = 'http://'
                             ~ app.request.server.get('SERVER_NAME')
                             ~ asset('images/logo.png') %}
{% block stylesheets %}
    {% block redes_sociales %}
        <meta property="og:url" content="{{url('homepage')}}" />
        <meta property="og:title" content="Pakmail Virreyes" />
        <meta property="og:image" content="{{urlAbsolutaFoto}}" />
        <meta property="og:type" content="article" />
        <meta property="og:site_name" content="pakmail.com" />
        <!--meta property="fb:admins" content="USER_ID1,USER_ID2"/-->

        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@Pakmail">
        <meta name="twitter:title" content="Pakmail">
        <meta name="twitter:description" content="Pakmail, enviar sus paquetes a todo el pais">
        <meta name="twitter:creator" content="@richpolis">
        <meta name="twitter:image:src" content="{{urlAbsolutaFoto}}">
        <meta name="twitter:domain" content="{{url('homepage')}}">
    {% endblock %}
    {% if app.environment == 'prod' %}
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                        m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-xxxxxx-1', 'auto');
            ga('send', 'pageview');
        </script>
    {% endif %}
{% endblock %}

{% block body %}  
    <header>
        <div class="logo-redes-sociales">
            <figure class="logo">
                <img src="{{asset('images/logo.png')}}">
            </figure>
            <figure class="social_face_top">
                <img src="{{asset('images/facebook.png')}}" alt="">
            </figure>
        </div>
        <div class="menu_bar">
            <a href="#" id="bt-menu" class="bt-menu">
                <img src="{{asset('images/logo_footer.png')}}" alt="" class="logo">
                <span class="icon-menu">Menu</span>
            </a>
	</div>    
        <nav id="navegador">
            <ul>
                <li><a href="#index">inicio</a></li>
                <li><a href="#">quienes somos</a></li>
                <li><a href="#">calendario</a></li>
                <li><a href="#">ubicación y contacto</a></li>
                <li><a href="#">ingreso a clientes</a></li>
            </ul>
        </nav>
        <div class="boletin">
            <div class="leyenda">
                Suscribete para recibir ofertas y promociones
                <img src="{{asset('images/newsletter.png')}}" alt="">
            </div>
            <form action="" method="post" id="formNewsletter" class="form-newsletter">
                <div class="group-form">
                    <input class="forms" type="text" placeholder="Nombre">
                    <input class="forms" type="text" placeholder="Email">
                </div>
                <a href="#" class="boton-guardar-newsletter">
                    <img src="{{asset('images/guardarnewsletter.png')}}" alt="">
                </a>
            </form>
        </div>
    </header>
    {% block contenido %} {% endblock %}
    <footer>
        <ul class="info">
            <li class="text-align-right border-r border-r-blanco">
                <div class="direccion">
                    pakmall103@pakmail.com.mx
                    <br>
                    5202-1193 5202-1259
                </div>    
            </li>
            <li class="text-align-left">
                <figure class="logo-footer">
                    <img src="{{asset('images/logo_footer.png')}}" alt=""> 
                </figure>
            </li>
        </ul>
        <ul class="info">
            <li class="text-align-right border-r border-r-vino">
                <div class="direccion flat">
                    <a class="aviso-privacidad" href="#">Aviso de Privacidad</a> 
                </div>    
            </li>
            <li class="text-align-left">
                <div class="direccion flat">
                    <a class="terminos-condiciones" href="#">Términos y Condiciones</a> 
                </div> 
            </li>
        </ul>
        <div class="derechos">
            <p>2015 PAKMAIL VIRREYES. Todos los derechos reservados. Pedregal No. 96 Col. Lomas de Chapultepec, Del. Miguel Hidalgo. C.P. 11000. Ciudad de México, Distrito Federal.</p>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{asset('js/jquery.js')}}"></script>
    <script type="text/javascript">
                (function(){
                        var contador = 1;
                        var menuBar = document.getElementById("bt-menu");
                        menuBar.addEventListener('click',function(){
                                var nav = document.getElementById("navegador");
                                if(contador == 1){
                                        nav.style.left = "0";
                                        contador = 2;
                                }else{
                                        nav.style.left = "-100%";
                                        contador=1;
                                }
                        });
                })();
    </script>
{% endblock %}
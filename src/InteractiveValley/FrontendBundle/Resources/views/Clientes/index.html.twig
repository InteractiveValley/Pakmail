{% extends 'FrontendBundle::pakmail.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block contenido %}
<!-- Main bar -->
    <div class="mainbar">
        <!-- Matter -->
        <div class="matter">
            <div class="container">
                <!-- Table -->
                <div class="row">
                    <div class="col-md-12">
                        <article>
                            <header>
                                <hgroup>
                                    <h3 class="titulo vino">Envios realizados</h3>
                                    <h6 class="subtitulo vino"></h6>
                                </hgroup>
                            </header>
                            <table class="table table-striped table-bordered table-hover">
                                <tbody>
                                    {% for envio in envios %}
                                        <tr class="item-perfil">
                                            <td>Nombre de usuario: {{envio.cliente.nombre }}</td>
                                            <td>Estatus: {{envio.status | status | raw }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{path('pakmail_envios_new')}}" class="btn btn-bg btn-danger">Crear solicitud</a>
                        </article>
                    </div>
                </div>
            </div>
        </div>
        <!-- Matter ends -->
    </div>
    <!-- Mainbar ends -->        
    <div class="clearfix"></div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    $(function(){
        window.api = {
                url: 'http://localhost:8042/app_dev.php',
                status: 'inicio',
                modelo: {
                    id: 0
                },
            };
    });
</script>
<!--script data-main="/js/app_pakmail" src="{{asset('js/libs/require/require.js')}}"></script-->
     
{% endblock %}
{% extends 'FrontendBundle::pakmail.html.twig' %}

{% block title %}Pakmail - Login{% endblock %}   

{% block body %}
    <header class="vino">
        <div class="text-align-center">
			<a class="float-left homeicon" href="{{path('homepage')}}">
				<img src="{{asset('images/homeicon.png')}}"/>
			</a>
            <figure class="logo no-margin">
                <a href="{{path('homepage')}}"><img src="{{asset('images/logo_footer.png')}}"></a>
            </figure>
        </div>
    </header>
    <!-- Form area -->
    <div class="admin-form">
        <div class="container">
            
            <div class="row">
                <div class="col-md-12">
                    <!-- Widget starts -->
                    <div class="widget">
                        <!-- Widget head -->
                        <div class="widget-head">
                            <i class="icon-lock"></i> Login 
                        </div>
                        <div class="widget-content">
                            <div class="padd contenido-formulario">
                                <!-- Login form -->
                                <form class="form-horizontal" action='{{ path(ruta) }}'  method="post">
                                    <!-- Email -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="username">Email</label>
                                        <div class="col-lg-9">
                                            <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Email">
                                        </div>
                                    </div>
                                    <!-- Password -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3" for="password">Contraseña</label>
                                        <div class="col-lg-9">
                                            <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                                        </div>
                                    </div>
                                    <!-- Remember me checkbox and sign in button -->
                                    <div class="form-group">
                                        <div class="col-lg-9 col-lg-offset-3">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" id="remember_me" name="_remember_me" checked > Recuérdame
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-9 col-lg-offset-3">
                                        <button type="submit" class="btn btn-danger">Entrar</button>
                                        <button type="reset" class="btn btn-default">Limpiar</button>
                                    </div>
                                    <br />
                                </form>

                            </div>
                        </div>

                        <div class="widget-foot">
                            <!--No esta registrado? <a href="#">Registrarse aquí</a><br/>-->
                            Recuperar constraseña <a href="{{path('pakmail_recuperar')}}">aquí</a><br/>
                            {% if error %}
                                {% if error %} 
                                        <div id='error' class="label label-danger">{{ error.message | trans}}</div> 
                                {% endif %} 
                            {% else %}
                                <br/>
                            {% endif %}
                            {% for flashMessage in app.session.flashbag.get('notice') %}
                                <div class="flash-notice label label-info">
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>  
                </div>
            </div>
        </div> 
    </div>
<footer class="footer">
    <div class="container">
    <!--img src="{{asset('images/interactivevalley.png')}}"/-->
	&nbsp;
    </div>
</footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
           //$("body").css({'paddingTop':'30px'});
           $("footer").css({'position':'fixed','bottom':'0px','width':'100%'});
           $(".admin-form").css({'margin':'0px auto'});
        });
    </script>
{% endblock %}    

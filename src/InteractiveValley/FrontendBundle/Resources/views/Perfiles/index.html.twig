{% extends 'FrontendBundle::pakmail.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block contenido %}
    <!-- Main bar -->
    <div class="mainbar">
        <!-- Matter -->
        <div class="matter">
            <div class="container">
                <!-- Table -->
                <div class="row">
                    <div class="col-md-12">
                        <article>
                            <header>
                                <hgroup>
                                    <h3 class="titulo vino">Perfiles guardados de envío</h3>
                                    <h6 class="subtitulo vino"> por su comodidad los perfiles de envío pueden ser llamados al momento de crear una solicitud de envío nueva</h6>
                                </hgroup>
                            </header>
                            <table class="table table-striped table-bordered table-hover">
                                <tbody>
                                    {% for perfil in range(1,5 ) %}
                                        <tr class="item-perfil">
                                            <td width="80%">Nombre del perfil: {{perfil}}</td>
                                            <td width="10%">
                                                <a href="#">
                                                    Editar
                                                </a>
                                            </td>
                                            <td width="10%">
                                                <a href="#">
                                                    Borrar
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </article>
                    </div>
                </div>
            </div>
        </div>
        <!-- Matter ends -->
    </div>
    <!-- Mainbar ends -->        
    <div class="clearfix"></div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
     
{% endblock %}

<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Empresa</th>
            <th>Usuario de empresa</th>
            <th>Nombre perfil</th>
            <th>Es Activo?</th>
            <th>Fecha creacion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="cuerpoTabla">
        {% for entity in entities %}
            <tr id="registro-{{entity.id}}">
                <td><a href="{{ path('perfiles_envio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cliente.empresa.nombre }}</td>
                <td>{{ entity.cliente.nombre }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.isActive | isActive | raw }}</td>
                <td>{{ entity.createdAt | date('d/m/Y') }}</td>
                <td>
                    <button onclick="javascript:editarRegistro('{{ path('perfiles_envio_edit', { 'id': entity.id }) }}')" class="btn btn-xs btn-warning"><i class="fa fa-pencil"></i> </button>
                    <button onclick="javascript:editarRegistro('{{ path('perfiles_envio_show', { 'id': entity.id }) }}', '#registro-{{entity.id}}')" class="btn btn-xs btn-info"><i class="fa fa-folder-open"></i> </button>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

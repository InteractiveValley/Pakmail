@import 'nib'
@import 'normalize'
@import 'fuentes'


box-sizing()
	-webkit-box-sizing arguments
	-moz-box-sizing arguments
	box-sizing arguments
	
opacity(n)
	opacity n
	if support-for-ie
		filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

color_vino = rgb(152,1,46)
color_vino_oscuro = rgb(108,5,36)
color_gris_oscuro = #374959
color_gris_claro = #ededed
color_negro_admin = #474F57

article
	header
		.titulo
			font-size 1.5em
			color color_vino
			&:first-letter
				text-transform uppercase
		.subtitulo
			font-size .8em
			color color_vino
			&:first-letter
				text-transform uppercase

body
	font-size 16px
	background-color white
	font-family "TeXGyreAdventor-Regular"
	padding 0

footer
	position fixed
	bottom 0px
	left 0px
	width 100%
	z-index 1000
	
ul
	padding 0
	margin 0

header
	height 88px
	border-top none
	&.vino
		background-color color_vino
	& .logo
		padding 19px 0px
	& .logo
	& .usuario
		display inline-block 
		vertical-align top

.content
	& .sidebar
		position fixed
		height 100%
		background-color color_negro_admin
	& .mainbar
		min-height 400px
		background-color white

.float-left
	float left
		
.item-perfil
	& a
		text-decoration none
		color color_vino
		font-size 1em
		font-weight bold

.menu_bar
	display none

.no-margin
	margin 0

.perfiles-titulo
	border 1px solid color_gris_claro
	height 32px 
	line-height 24px
	padding-left 20px

.perfiles-guardados
	border 1px solid color_gris_claro
	margin-top 15px
	position relative
	& .item-perfil
		list-style none
		padding 10px
		border-bottom 1px solid color_gris_claro
		font-size 1em
		&:hover
			background-color color_vino
			color white
			border 1px solid white
		&:first-child:hover:before
			content ''
			height 15px
			width 25px
			background-color color_vino
			position absolute
			top 1px
			right 5px
			z-index 1001
	&:before
		content ''
		height 15px
		width 15px
		position absolute
		top -8px
		right 10px
		transform rotate(45deg)
		border-top 1px solid color_gris_claro
		border-left 1px solid color_gris_claro
		z-index 1000
		background-color white

.text-align-center
	text-align center
	
.text-align-left 
	text-align left

.text-align-right
	text-align right

.usuario
	float right
	padding-right 20px
	& a
		text-decoration none
	& .datos-usuario
		display inline-block
		vertical-align top
		font-size 1.3em 
		color white
		margin-top 30px
		&:first-child
			padding-right 20px
			border-right 2px solid white
		&:last-child
			padding-left 10px


.solicitud-envio
	overflow auto
	height 400px

.homeicon
	height 60px
	width 60px
	margin-left 20px
	margin-top 20px

@media screen and (max-width: 960px)
	footer
		display none